{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "paths": {
      "@assets/*": ["node_modules/@patternfly/react-core/dist/styles/assets/*"],
      "@console/shared": ["src/ConsoleShared"],
      "@console/shared/*": ["src/ConsoleShared/*"],
      "@console/internal": ["src/ConsoleInternal"],
      "@console/internal/*": ["src/ConsoleInternal/*"],
      "@quickstarts/*": ["src/*"]
    },
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__"]
}
